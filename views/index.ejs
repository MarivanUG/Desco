<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content.siteTitle %> - Touching Lives</title>
    <link rel="icon" href="/images/main-icon.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar">
        <div class="container">
            <a href="#" class="logo">
                <img src="/images/cropped-Logo512-01.webp" alt="Desco Logo">
                <span>DESCO<span class="highlight">(U) LTD</span></span>
            </a>
            <ul class="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#services">Services</a></li>
                <li><a href="#gallery">Gallery</a></li>
                <li><a href="#contact" class="btn-nav">Contact Us</a></li>
            </ul>
            <div class="menu-toggle">
                <i class="fas fa-bars"></i>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <header id="home" class="hero" style="background-image: url('<%= content.hero.backgroundImage %>');">
        <div class="overlay"></div>
        <div class="hero-content">
            <h1 class="fade-in-up"><%= content.hero.title %></h1>
            <p class="fade-in-up delay-1"><%= content.hero.subtitle %></p>
            <a href="<%= content.hero.ctaLink %>" class="btn btn-primary fade-in-up delay-2"><%= content.hero.ctaText %></a>
        </div>
    </header>

    <!-- About Section -->
    <section id="about" class="section about-section">
        <div class="container">
            <div class="row">
                <div class="col-img fade-in-left">
                    <div class="img-wrapper">
                        <img src="<%= content.about.image %>" alt="About Desco">
                        <div class="experience-badge">
                            <span class="years">10+</span>
                            <span class="text">Years of Excellence</span>
                        </div>
                    </div>
                </div>
                <div class="col-text fade-in-right">
                    <h4 class="section-subtitle"><%= content.about.subtitle %></h4>
                    <h2 class="section-title"><%= content.about.title %></h2>
                    <p class="section-desc"><%= content.about.text %></p>
                    
                    <% if (content.about.stats && content.about.stats.length > 0) { %>
                    <div class="stats-grid">
                        <% content.about.stats.forEach(stat => { %>
                            <div class="stat-item">
                                <h3 class="stat-number"><%= stat.number %></h3>
                                <p class="stat-label"><%= stat.label %></p>
                            </div>
                        <% }); %>
                    </div>
                    <% } %>
                    <a href="#contact" class="btn btn-secondary">Get in Touch</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="section services-section bg-light">
        <div class="container">
            <div class="section-header text-center">
                <h4 class="section-subtitle">What We Do</h4>
                <h2 class="section-title">Our Premium Services</h2>
                <div class="separator"></div>
            </div>
            
            <div class="services-grid">
                <% content.services.forEach(service => { %>
                    <div class="service-card">
                        <div class="service-img">
                            <img src="<%= service.image %>" alt="<%= service.title %>">
                            <div class="icon-box">
                                <span><%= service.icon %></span>
                            </div>
                        </div>
                        <div class="service-body">
                            <h3><%= service.title %></h3>
                            <p><%= service.description %></p>
                            <a href="#contact" class="read-more">Learn More <i class="fas fa-arrow-right"></i></a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Features / Why Choose Us -->
    <section class="section features-section">
        <div class="container">
            <div class="section-header text-center">
                <h2 class="section-title text-white">Why Choose Desco?</h2>
            </div>
            <div class="features-grid">
                <% if (content.features) { content.features.forEach(feature => { %>
                    <div class="feature-box">
                        <i class="fas fa-check-circle"></i>
                        <h3><%= feature.title %></h3>
                        <p><%= feature.text %></p>
                    </div>
                <% }); } %>
            </div>
        </div>
    </section>

    <!-- Gallery Section -->
    <section id="gallery" class="section gallery-section">
        <div class="container">
            <div class="section-header text-center">
                <h2 class="section-title">Recent Projects</h2>
            </div>
            <div class="gallery-grid">
                <% if (content.gallery) { content.gallery.forEach(img => { %>
                    <div class="gallery-item">
                        <img src="<%= img %>" alt="Gallery Image">
                    </div>
                <% }); } %>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="section contact-section bg-light">
        <div class="container">
            <div class="row">
                <div class="col-info">
                    <h2 class="section-title">Contact Us</h2>
                    <p>Have questions? Reach out to us directly.</p>
                    <ul class="contact-list">
                        <li>
                            <i class="fas fa-map-marker-alt"></i>
                            <div>
                                <strong>Address:</strong>
                                <p><%= content.contact.address %></p>
                            </div>
                        </li>
                        <li>
                            <i class="fas fa-envelope"></i>
                            <div>
                                <strong>Email:</strong>
                                <p><a href="mailto:<%= content.contact.email %>"><%= content.contact.email %></a></p>
                            </div>
                        </li>
                        <li>
                            <i class="fas fa-phone-alt"></i>
                            <div>
                                <strong>Phone:</strong>
                                <p><a href="tel:<%= content.contact.phone %>"><%= content.contact.phone %></a></p>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="col-map">
                    <% if (content.contact.mapEmbed) { %>
                        <iframe src="<%= content.contact.mapEmbed %>" width="100%" height="350" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-top">
                <div class="footer-col">
                    <h3><%= content.siteTitle %></h3>
                    <p class="footer-about">We deliver excellence in every print, trip, and supply. Your vision, our mission.</p>
                </div>
                <div class="footer-col">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="#home">Home</a></li>
                        <li><a href="#about">About Us</a></li>
                        <li><a href="#services">Services</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h3>Follow Us</h3>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; <%= new Date().getFullYear() %> <%= content.siteTitle %>. All Rights Reserved. <a href="/login" style="color: inherit; text-decoration: none; opacity: 0.3;"><i class="fas fa-lock" style="font-size: 0.8em;"></i></a></p>
            </div>
        </div>
    </footer>

    <script src="/js/script.js"></script>
</body>
</html>